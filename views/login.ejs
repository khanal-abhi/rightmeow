<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/header %>
  </head>
  <body>
    <% include ./partials/navigation %>

    <!--
    ==========================================
    Main content goes here ===================
    ==========================================
    -->
    <div class="container">
      <div class="login-form">
        <% if(message != "") {%>
          <span class="my-flash"><%= message %></span>
          <% } %>
        <form role="form" method="post" action="/login" class="form">
          <div class="form-group">
            <label for="username">Username:</label>
            <input class="form-control" id="username" name="username" />
          </div>
          <div class="form-group">
            <label for="password">Password:</label>
            <input class="form-control" id="password" name="password" type="password" />
          </div>
          <input class="btn btn-primary form-cotrol" type="submit" value="Login&nbsp;&raquo;" />
        </form>
        <a class="centered" href="/signup">Click here to sign up for an account now.</a>
      </div>


    </div>

    <!--
    ==========================================
    Main content ends here ===================
    ==========================================
    -->

    <% include ./partials/footer %>
  </body>
</html>
