<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/header %>
  </head>
  <body>
    <% include ./partials/navigation %>

    <!--
    ==========================================
    Main content goes here ===================
    ==========================================
    -->
    <div class="container">
      <div class="profile-form">
        <% if(message != "") {%>
          <span class="my-flash"><%= message %></span>
          <% } %>
        <form role="form" method="post" action="/signup" class="form">
          <div class="form-group">
            <label for="firstName">First Name:</label>
            <input class="form-control" id="firstName" name="firstName" value="<%= user.firstName %>" />
          </div>
          <div class="form-group">
            <label for="lastName">Last Name:</label>
            <input class="form-control" id="lastName" name="lastName" value="<%= user.lastName %>" />
          </div>
          <div class="form-group">
            <label for="email">Email:</label>
            <input class="form-control" id="email" name="email" type="email" value="<%= user.email %>" />
          </div>

          <input class="btn btn-primary form-cotrol" type="submit" value="Update Info&nbsp;&raquo;" />
        </form>
      </div>
    </div>

    <!--
    ==========================================
    Main content ends here ===================
    ==========================================
    -->

    <% include ./partials/footer %>
  </body>
</html>
